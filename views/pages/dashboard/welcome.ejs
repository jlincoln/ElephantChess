<div id="welcome">
  <div class="container pt-5 pb-5">
    <h1>Welcome to Elephant Chess!</h1>
    <hr/>
    <p>This is your personal homepage.</p>
    <div class="buttons">
      <a class="btn btn-info" href="/games">My Games</a>
      <a class="btn btn-info" href="/account/profile">Update Email</a>
    </div>
    <br>
    <div>
      <% if (notices.length > 0) { %>
       <h3>Site Notices</h3>
        <% notices.forEach(function(notice) { %>
          <h4><%= notice.title %></h4>
          <p><%= notice.message %></p>
        <% }); %>
      <% } %>
    </div>
    <br>
    <div>
      <h3>Your Statistics</h3>
      <table class="table">
        <thead>
        </thead>
        <tbody>
          <tr>
            <td>Active Games</td>
            <td><%= statistics.gamesPlaying %></td>
          </tr>
          <tr>
            <td>Total Games</td>
            <td><%= statistics.gamesPlayed %></td>
          </tr>
          <tr>
            <td>Won Games</td>
            <td><%= statistics.gamesWon %></td>
          </tr>
          <tr>
            <td>Lost Games</td>
            <td><%= statistics.gamesLost %></td>
          </tr>
          <tr>
            <td>Site Rating</td>
            <td><%= statistics.siteRating %></td>
          </tr>
          <tr>
            <td>Site Ranking</td>
            <td><%= statistics.siteRanking %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <router-view></router-view>

</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
